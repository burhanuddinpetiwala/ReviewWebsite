@model ReviewWebsite.Models.Review

@{
    ViewBag.Title = "Delete REating";
}

<!DOCTYPE html>

<html>
<head>
    <style>
        .cardHead {
            text-align: center;
            font-weight: bolder;
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <h3 class="cardHead">Are you sure you want to delete this?</h3>
    <div>

        <hr />
        <div class="container mt-5">
            <div class="row d-flex justify-content-center">
                <div class="col-md-7">
                    <div class="card p-3 py-4">
                        <div class="cardHead">
                            <h3 class="mt-2 mb-0"><b> @Html.DisplayFor(model => model.Review_name)</b></h3>
                        </div>
                        <div class="text-center"> <img src = "@Html.DisplayFor(model => model.movie_poster)" class="img-rounded" onerror="this.src = 'https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/450px-No_image_available.svg.png'"> </div>
                        <div class="text-center mt-3">


                        </div>
                        <ul class="list-group list-group-flush">

                            <li class="list-group-item">
                                <i class="class=" bi bi-card-list"></i><i class="bi bi-card-list"></i> Descrption : @Html.DisplayFor(model => model.Review_desc)
                                <hr />
                            <li class="list-group-item">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                        <input type="submit" value="Delete" class="btn btn-default" /> |
                                        @Html.ActionLink("Back to List", "Index")
                                    </div>}
                            </li>
</div>        <hr />

                    </li>

                    </ul>

                </div>
            </div>
        </div>
    </div>
</body>
</html>


