@model ReviewWebsite.Models.Review

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<!DOCTYPE html>

<html>

<head>
    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">*@
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <style>
        .cardHead {
            text-align: center;
            font-weight: bolder;
            margin-bottom: 5px;
        }
        .rating {
            display: flex;
        }

            .rating input {
                position: absolute;
                left: -100vw;
            }

            .rating label {
                width: 48px;
                height: 48px;
                padding: 48px 0 0;
                overflow: hidden;
                background: url('https://iamkate.com/code/star-rating-widget/stars.svg') no-repeat top left;
            }

            .rating:not(:hover) input:indeterminate + label,
            .rating:not(:hover) input:checked ~ input + label,
            .rating input:hover ~ input + label {
                background-position: -48px 0;
            }

            .rating:not(:hover) input:focus-visible + label {
                background-position: -96px 0;
            }
    </style>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-control-static">
            <h2 class="cardHead">Edit Details</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-control-static">
                <Label class="control-label col-md-2">Movie Name</Label>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.Review_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Review_name, "", new { @class = "text-danger" })
                </div>
                <br /><br /><br />
            </div>
            <div class="form-group">
                <Label class="control-label col-md-2">Movie Poster Image URL (If any)</Label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.movie_poster, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.movie_poster, "", new { @class = "text-danger" })
                </div>
            </div>
            <br /><br />
            <div class="form-group">
                <Label class="control-label col-md-2">Director</Label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.director, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.director, "", new { @class = "text-danger" })
                </div>
            </div>
            <br /><br />
            <div class="form-group">
                <Label class="control-label col-md-2">Publication</Label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.publications, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.publications, "", new { @class = "text-danger" })
                </div>
            </div>
            <br /><br />
                  <div class="form-group">
                      <Label class="control-label col-md-2">Rating</Label>
                      <div class="rating col-md-10">
                          @Html.RadioButtonFor(model => model.star, 1, htmlAttributes: new { @class = "form-control", id = "star1" })
                          <label for="star1">1</label>
                          @Html.RadioButtonFor(model => model.star, 2, new { @class = "form-control", id = "star2" })
                          <label for="star2">2</label>
                          @Html.RadioButtonFor(model => model.star, 3, new { @class = "form-control", id = "star3" })
                          <label for="star3">3</label>
                          @Html.RadioButtonFor(model => model.star, 4, new { @class = "form-control", id = "star4" })
                          <label for="star4">4</label>
                          @Html.RadioButtonFor(model => model.star, 5, new { @class = "form-control", id = "star5" })
                          <label for="star5">5</label>
                          <br />
                          @Html.ValidationMessageFor(model => model.star, "", new { @class = "text-danger" })
                      </div>
                  </div>
            <br /><br />
            <div class="form-group">
                <Label class="control-label col-md-2">Description</Label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Review_desc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Review_desc, "", new { @class = "text-danger" })
                </div>
            </div>
            <br /><br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Edit" class="btn btn-default" />

                    <i class="glyphicon glyphicon-backward"></i> @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>}
</body>
</html>
